#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin >>t;
	while(t--){
	    int n;
	    cin >> n;
	    vector<int> v(n);
	    for(int i=0;i<n;i++){
	        cin >> v[i];
	    }
	    int m=INT_MAX;
	    for(int i=0;i<n-1;i++){
	        m=min(m,v[i]+(v[i+1]/2));
	    }
	    sort(v.begin(),v.end());
	    cout << min(m,v[0]+v[1]) << endl;
	}

}
