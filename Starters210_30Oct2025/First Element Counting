#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        vector<pair<int,int>> b;

        for (int i = 0; i < n; i++) {
            cin >> a[i];
            b.push_back({a[i], i});
        }

        sort(b.begin(), b.end());
        vector<pair<int,long long>> ans;

        for (int i = 0; i < n; i++) {
            if (i == 0 || i == n - 1) {
                ans.push_back({b[i].second, -1});
            } else {
               long long val = ((b[i].first + b[i + 1].first) / 2) - ((b[i - 1].first + b[i].first) / 2);
               val=abs(val);
                ans.push_back({b[i].second, val});

            }
        }

        sort(ans.begin(), ans.end());
        for (int i = 0; i < n; i++) {
            cout << ans[i].second << " ";
        }
        cout << endl;
    }

    return 0;
}
