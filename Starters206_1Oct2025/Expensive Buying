#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
           int t;
           cin >> t;
           while(t--){
               int n,k;
               cin >> n >> k;
               vector<int> v(n);
               for(int i=0;i<n;i++){
                   cin >> v[i];
               }
               
               int ans=0;
               sort(v.begin(),v.end());
               reverse(v.begin(),v.end());
               for(int i=0;i<k;i++){
                   ans=ans+v[i];
               }
               cout << ans << endl;
           }
}

