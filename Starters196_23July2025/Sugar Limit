#include <bits/stdc++.h>
using namespace std;

int main() {
   int t;
   cin >> t;
   while(t--){
       int n;
       cin >>n;
       vector<int> a(n),b(n);
       for(int i=0;i<n;i++){
           cin >> a[i];
       }
        for(int i=0;i<n;i++){
           cin >> b[i];
       }      
       vector<vector<int>> vv;
       long long sum=0;
       for(int i=0;i<n;i++){
           if(a[i]>=0){
               vector<int> v;
               sum=sum+a[i];
               v.push_back(b[i]);
               v.push_back(a[i]);
               vv.push_back(v);
           }
       }
  sort(vv.begin(), vv.end());     // ascending
reverse(vv.begin(), vv.end()); // now it's descending
         long long maax=0;
         for(int i=0;i<vv.size();i++){
             maax=max(maax,sum-vv[i][0]);
             sum=sum-vv[i][1];
         }
         cout << maax << endl;
   }
}
