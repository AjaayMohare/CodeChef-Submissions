#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int t;
    cin >> t;
    while(t--){
        int n;
        cin >> n;vector<int>v(n);
        for(int i=0;i<n;i++){
            cin >> v[i];
        }
        int l=1;
        int m=0;
        for(int i=0;i<n;i++){
            int p=v[i]%2;
            int f=0;//diff parity
            //f=1 same aprity
            for(int j=i+1;j<n;j++){
                if(v[j]%2!=p && f==0){
                    l++;
                    f=1;
                    // cout << "one" << l << endl;
                }
                else if(v[j]%2==p && f==1){
                    l++;
                    f=0;
                                        // cout << "one" << l << endl;

                                       

                }
            }
            m=max(m,l);
            l=1;
        }
        cout << m << endl;
    }
}
