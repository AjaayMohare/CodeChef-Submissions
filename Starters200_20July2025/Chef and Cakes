#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
    int n,x,y;
    cin >> n >> x >>y;
     int oo=1;
     for(int i=1;i<INT_MAX;i++){
         if(x*i<y){
             oo=i;
         }
         else{
             break;
         }
     }
     cout << n/oo << endl;
}
